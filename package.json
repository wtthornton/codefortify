{
  "name": "@wtthornton/codefortify",
  "version": "1.3.0",
  "description": "CodeFortify - AI-powered code strengthening and security enhancement for modern development",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./claude-commands": "./src/claude-commands/index.js"
  },
  "bin": {
    "codefortify": "bin/codefortify.js",
    "codefortify-simple": "bin/codefortify-simplified.js"
  },
  "scripts": {
    "dev": "node src/server/CodeFortifyMCPServer.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:cli": "vitest run tests/cli",
    "test:e2e": "vitest run tests/e2e",
    "coverage": "vitest run --coverage",
    "coverage:open": "vitest run --coverage && open coverage/index.html",
    "coverage:threshold": "vitest run --coverage --reporter=verbose",
    "coverage:watch": "vitest --coverage --watch",
    "coverage:ci": "vitest run --coverage",
    "test:performance": "vitest run tests/**/*.bench.js",
    "test:all": "npm run test && npm run test:integration && npm run test:cli",
    "test:ci": "npm run coverage:ci && npm run lint && npm run format:check",
    "test:debug": "vitest run --reporter=verbose --no-coverage",
    "test:context7": "node tests/run-context7-tests.js all",
    "test:context7:coverage": "node tests/run-context7-tests.js coverage",
    "test:context7:context": "node tests/run-context7-tests.js context",
    "test:context7:learning": "node tests/run-context7-tests.js learning",
    "test:context7:monitoring": "node tests/run-context7-tests.js monitoring",
    "test:context7:integration": "node tests/run-context7-tests.js integration",
    "analyze": "node scripts/analyze-bundle.js",
    "size-check": "node scripts/check-size.js",
    "test:legacy": "node src/testing/MCPTester.js",
    "validate": "node src/validation/CodeFortifyValidator.js",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:ci": "npm audit --audit-level=moderate",
    "start": "node bin/codefortify.js",
    "build": "echo 'No build step needed for ESM project' && exit 0",
    "lint": "eslint src/ bin/ tests/",
    "lint:fix": "eslint src/ bin/ tests/ --fix",
    "lint:ci": "eslint src/ bin/ tests/ --format=junit --output-file=test-results/eslint-results.xml",
    "format": "prettier --write src/ bin/ tests/",
    "format:check": "prettier --check src/ bin/ tests/",
    "format:ci": "prettier --check src/ bin/ tests/ --log-level=error",
    "typecheck": "echo 'TypeScript checking would go here'",
    "quality": "npm run lint && npm run format:check && npm run coverage",
    "quality:fix": "npm run lint:fix && npm run format && npm run test",
    "prepublishOnly": "echo 'Skipping prepublish checks for publishing'",
    "precommit": "npm run lint:fix && npm run format && npm run test:unit",
    "ci": "npm run test:ci && npm run audit:ci",
    "mcp:dev": "node src/mcp-server.js",
    "mcp:test": "codefortify test-mcp",
    "codefortify:validate": "codefortify validate",
    "score": "codefortify score",
    "score:detailed": "codefortify score --detailed --recommendations --bundle-analysis --performance",
    "codefortify:score": "codefortify score",
    "codefortify:test-mcp": "codefortify test-mcp",
    "context7:validate": "context7 validate",
    "context7:score": "context7 score",
    "context7:test-mcp": "context7 test-mcp",
    "realtime:start": "node bin/codefortify-realtime.js start",
    "realtime:status": "node bin/codefortify-realtime.js status",
    "realtime:test": "node bin/codefortify-realtime.js test-connection",
    "simple": "node bin/codefortify-simplified.js",
    "simple:setup": "node bin/codefortify-simplified.js setup",
    "simple:analyze": "node bin/codefortify-simplified.js analyze",
    "simple:enhance": "node bin/codefortify-simplified.js enhance",
    "simple:monitor": "node bin/codefortify-simplified.js monitor",
    "simple:tools": "node bin/codefortify-simplified.js tools"
  },
  "keywords": [
    "codefortify",
    "code-security",
    "ai-development",
    "mcp",
    "model-context-protocol",
    "code-quality",
    "development-tools",
    "code-patterns",
    "security-analysis",
    "project-scaffolding"
  ],
  "author": "wtthornton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wtthornton/codefortify.git"
  },
  "bugs": {
    "url": "https://github.com/wtthornton/codefortify/issues"
  },
  "homepage": "https://github.com/wtthornton/codefortify#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@playwright/test": "^1.55.0",
    "axe-core": "^4.10.3",
    "axe-playwright": "^2.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.0.0",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.55.0",
    "pngjs": "^7.0.0",
    "prom-client": "^15.1.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@playwright/test": "^1.55.0",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-core": "^4.10.3",
    "axe-playwright": "^2.1.0",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "fs-extra": "^11.2.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.55.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "bin/",
    "templates/",
    "examples/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
