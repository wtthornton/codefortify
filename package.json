{
  "name": "@wtthornton/context7-mcp",
  "version": "1.0.0",
  "description": "Context7 Model Context Protocol integration for AI-assisted development",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "context7": "bin/context7.js"
  },
  "scripts": {
    "dev": "node src/server/Context7MCPServer.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:cli": "vitest run tests/cli",
    "test:coverage": "vitest run --coverage",
    "test:legacy": "node src/testing/MCPTester.js",
    "validate": "node src/validation/Context7Validator.js",
    "lint": "eslint src/ bin/ tests/",
    "lint:fix": "eslint src/ bin/ tests/ --fix",
    "format": "prettier --write src/ bin/ tests/",
    "format:check": "prettier --check src/ bin/ tests/",
    "typecheck": "echo 'TypeScript checking would go here'",
    "build": "echo 'No build step required for pure ESM'",
    "prepublishOnly": "npm run test && npm run lint",
    "ci": "npm run test:coverage && npm run lint && npm run format:check"
  },
  "keywords": [
    "context7",
    "mcp",
    "model-context-protocol",
    "ai-assistant",
    "development-tools",
    "code-patterns",
    "agent-os"
  ],
  "author": "wtthornton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wtthornton/context7-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/wtthornton/context7-mcp/issues"
  },
  "homepage": "https://github.com/wtthornton/context7-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "commander": "^12.0.0",
    "inquirer": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "vitest": "^2.1.0",
    "@vitest/coverage-v8": "^2.1.0",
    "fs-extra": "^11.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "bin/",
    "templates/",
    "README.md",
    "LICENSE"
  ]
}