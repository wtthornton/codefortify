{
  "name": "codefortify-realtime",
  "displayName": "CodeFortify Real-Time",
  "description": "Real-time code quality monitoring and enhancement feedback for CodeFortify",
  "version": "0.4.0",
  "publisher": "codefortify",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Testing",
    "Linters"
  ],
  "keywords": [
    "code quality",
    "ai",
    "enhancement",
    "real-time",
    "monitoring"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/*.js",
    "workspaceContains:**/*.ts",
    "workspaceContains:**/*.jsx", 
    "workspaceContains:**/*.tsx",
    "workspaceContains:**/*.py",
    "workspaceContains:**/*.go",
    "workspaceContains:**/*.java",
    "workspaceContains:**/*.cs",
    "workspaceContains:**/*.rb",
    "workspaceContains:**/*.php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codefortify.startRealtime",
        "title": "Start Real-Time Monitoring",
        "category": "CodeFortify"
      },
      {
        "command": "codefortify.stopRealtime",
        "title": "Stop Real-Time Monitoring", 
        "category": "CodeFortify"
      },
      {
        "command": "codefortify.showStatus",
        "title": "Show Status Dashboard",
        "category": "CodeFortify"
      },
      {
        "command": "codefortify.runAnalysis",
        "title": "Run Code Analysis",
        "category": "CodeFortify"
      },
      {
        "command": "codefortify.showRecommendations",
        "title": "Show Recommendations",
        "category": "CodeFortify"
      },
      {
        "command": "codefortify.openSettings",
        "title": "Open Settings",
        "category": "CodeFortify"
      }
    ],
    "configuration": {
      "title": "CodeFortify Real-Time",
      "properties": {
        "codefortify.realtime.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time monitoring"
        },
        "codefortify.realtime.serverPort": {
          "type": "number",
          "default": 8765,
          "description": "WebSocket server port"
        },
        "codefortify.realtime.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically connect on startup"
        },
        "codefortify.notifications.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable notifications"
        },
        "codefortify.notifications.priority": {
          "type": "string",
          "default": "medium",
          "enum": ["low", "medium", "high", "critical"],
          "description": "Minimum notification priority"
        },
        "codefortify.notifications.frequency": {
          "type": "string",
          "default": "smart",
          "enum": ["immediate", "batched", "smart"],
          "description": "Notification frequency mode"
        },
        "codefortify.notifications.sound": {
          "type": "boolean",
          "default": false,
          "description": "Play sound for notifications"
        },
        "codefortify.statusBar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar indicator"
        },
        "codefortify.statusBar.showScore": {
          "type": "boolean",
          "default": true,
          "description": "Show current score in status bar"
        },
        "codefortify.statusBar.showProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show progress indicator"
        },
        "codefortify.statusBar.updateInterval": {
          "type": "number",
          "default": 1000,
          "description": "Status bar update interval (ms)"
        },
        "codefortify.analysis.autoTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Automatically trigger analysis on file changes"
        },
        "codefortify.analysis.debounceDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay before triggering analysis after changes (ms)"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "codefortify.startRealtime",
          "when": "!codefortify.realtimeActive"
        },
        {
          "command": "codefortify.stopRealtime", 
          "when": "codefortify.realtimeActive"
        }
      ],
      "view/title": [
        {
          "command": "codefortify.runAnalysis",
          "when": "view == codefortifyStatus",
          "group": "navigation"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "codefortifyStatus",
          "name": "CodeFortify Status",
          "when": "codefortify.realtimeActive"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codefortify",
          "title": "CodeFortify",
          "icon": "$(pulse)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "ws": "^8.14.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codefortify/codefortify"
  },
  "homepage": "https://github.com/codefortify/codefortify#readme",
  "bugs": {
    "url": "https://github.com/codefortify/codefortify/issues"
  },
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  }
}