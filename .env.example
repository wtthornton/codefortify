# CodeFortify Environment Configuration
# Copy this file to .env and configure for your environment

# Node Environment
NODE_ENV=development

# Port Configuration
PORT=3000
MCP_SERVER_PORT=8765

# Logging Configuration
LOG_LEVEL=info

# Project Settings
PROJECT_ROOT=./

# CodeFortify Features
CODEFORTIFY_VERBOSE=false
CODEFORTIFY_AUTO_FIX=true
CODEFORTIFY_REAL_TIME_MONITORING=true

# AI Integration
CONTEXT7_ENABLED=true
PATTERN_LEARNING=true

# Performance Monitoring
PERFORMANCE_TRACKING=true
METRICS_COLLECTION=true

# Security Settings
SECURE_MODE=true
ERROR_REPORTING=false